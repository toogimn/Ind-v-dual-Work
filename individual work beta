import json

gradebook = []
language = "EN"  # default


def _(az, en):
    return az if language == "AZ" else en


def choose_language():
    global language
    print("ğŸŒ AZ / EN")
    lang = input("Dil seÃ§in / Choose language: ").strip().upper()
    if lang in ["AZ", "EN"]:
        language = lang
    else:
        print("YanlÄ±ÅŸ seÃ§im. Default olaraq English seÃ§ildi.")
        language = "EN"


def verify_human():
    correct = "2"
    print(_("ZÉ™hmÉ™t olmasa insan olduÄŸunuzu tÉ™sdiq edin:", "Please verify you're not a robot:"))
    print(_("AÅŸaÄŸÄ±dakÄ±lardan iti seÃ§in:", "Select the dog from the options below:"))
    options = ["1. ğŸ±", "2. ğŸ¶", "3. ğŸ¸", "4. ğŸµ"]
    for option in options:
        print(option)
    choice = input("> ")
    if choice != correct:
        print(_("YanlÄ±ÅŸ seÃ§im. Proqram dayandÄ±rÄ±lÄ±r.", "Wrong choice. Exiting program."))
        exit()


def load_from_file():
    global gradebook
    try:
        with open("gradebook.json", "r") as f:
            gradebook = json.load(f)
        print(_("MÉ™lumat yÃ¼klÉ™ndi.", "Data loaded."))
    except:
        gradebook = []
        print(_("Fayl tapÄ±lmadÄ±, boÅŸ baÅŸlanÄ±r.", "File not found, starting fresh."))

def save_to_file():
    with open("gradebook.json", "w") as f:
        json.dump(gradebook, f)


def main_menu():
    print(_("""
=== Menyu ===
1. TÉ™lÉ™bÉ™ É™lavÉ™ et
2. BÃ¼tÃ¼n qeydlÉ™rÉ™ bax
3. AxtarÄ±ÅŸ
4. YenilÉ™
5. Sil
6. Statistikalar
7. Fayla yaz
8. Fayldan oxu
9. Qeyd sayÄ±
10. TÉ™limat
11. BÃ¼tÃ¼n mÉ™lumatÄ± sil
0. Ã‡Ä±xÄ±ÅŸ
""", """
=== Menu ===
1. Add Student
2. View All
3. Search
4. Update
5. Delete
6. Statistics
7. Save to File
8. Load from File
9. Count Records
10. Help
11. Clear All
0. Exit
"""))


def add_record():
    name = input(_("TÉ™lÉ™bÉ™ adÄ±: ", "Student name: "))
    grades = []
    while True:
        grade = input(_("QiymÉ™t (bitirmÉ™k Ã¼Ã§Ã¼n q): ", "Grade (or 'q' to quit): "))
        if grade.lower() == 'q':
            break
        try:
            grades.append(float(grade))
        except:
            print(_("YanlÄ±ÅŸ format!", "Invalid format!"))
    gradebook.append({"name": name, "grades": grades})
    save_to_file()
    print(_("Qeyd É™lavÉ™ olundu.", "Record added."))

def view_records():
    if not gradebook:
        print(_("Qeyd yoxdur.", "No records available."))
        return
    for i, student in enumerate(gradebook, 1):
        print(f"{i}. {student['name']} - {student['grades']}")

def search_record():
    name = input(_("AxtarÄ±lan ad: ", "Enter name to search: "))
    found = False
    for student in gradebook:
        if name.lower() in student['name'].lower():
            print(f"{student['name']} - {student['grades']}")
            found = True
    if not found:
        print(_("TÉ™lÉ™bÉ™ tapÄ±lmadÄ±.", "Student not found."))

def update_record():
    name = input(_("YenilÉ™mÉ™k istÉ™diyiniz ad: ", "Enter student name to update: "))
    for student in gradebook:
        if student['name'].lower() == name.lower():
            print(_("Cari qiymÉ™tlÉ™r: ", "Current grades: "), student['grades'])
            new_grades = []
            while True:
                grade = input(_("Yeni qiymÉ™t (bitirmÉ™k Ã¼Ã§Ã¼n q): ", "New grade (or 'q' to quit): "))
                if grade.lower() == 'q':
                    break
                try:
                    new_grades.append(float(grade))
                except:
                    print(_("YanlÄ±ÅŸ format!", "Invalid format!"))
            student['grades'] = new_grades
            save_to_file()
            print(_("YenilÉ™ndi.", "Updated."))
            return
    print(_("TÉ™lÉ™bÉ™ tapÄ±lmadÄ±.", "Student not found."))

def delete_record():
    name = input(_("SilinÉ™cÉ™k ad: ", "Enter name to delete: "))
    for i, student in enumerate(gradebook):
        if student['name'].lower() == name.lower():
            gradebook.pop(i)
            save_to_file()
            print(_("Silindi.", "Deleted."))
            return
    print(_("TapÄ±lmadÄ±.", "Not found."))

def summary_stats():
    if not gradebook:
        print(_("Qeyd yoxdur.", "No data available."))
        return
    for student in gradebook:
        grades = student['grades']
        if grades:
            avg = sum(grades) / len(grades)
            print(f"{student['name']} - {_( 'Orta:', 'Average:')} {avg:.2f}")
        else:
            print(f"{student['name']} - {_('QiymÉ™t yoxdur.', 'No grades.')}")

def recursive_count(index=0):
    if index >= len(gradebook):
        return 0
    return 1 + recursive_count(index + 1)

def help_menu():
    print(_("""
Ä°stifadÉ™Ã§i tÉ™limatÄ±:
- TÉ™lÉ™bÉ™ É™lavÉ™ edin vÉ™ qiymÉ™tlÉ™r daxil edin
- AxtarÄ±n, yenilÉ™yin vÉ™ silin
- Statistik mÉ™lumatlara baxÄ±n
- Fayla yazÄ±n vÉ™ oxuyun
""", """
Instructions:
- Add students and enter grades
- Search, update and delete entries
- View statistics
- Save/load data from file
"""))

def clear_all_data():
    confirm = input(_("BÃ¼tÃ¼n mÉ™lumatÄ± silmÉ™k istÉ™yirsiniz? (bÉ™li/xeyr): ", "Clear all data? (yes/no): "))
    if confirm.lower() in ["bÉ™li", "yes"]:
        gradebook.clear()
        save_to_file()
        print(_("MÉ™lumat silindi.", "Data cleared."))
    else:
        print(_("ÆmÉ™liyyat lÉ™ÄŸv edildi.", "Cancelled."))


def main():
    choose_language()
    verify_human()
    load_from_file()

    while True:
        main_menu()
        choice = input(_("SeÃ§im: ", "Choice: "))
        match choice:
            case "1": add_record()
            case "2": view_records()
            case "3": search_record()
            case "4": update_record()
            case "5": delete_record()
            case "6": summary_stats()
            case "7": save_to_file()
            case "8": load_from_file()
            case "9": print(f"{_('Qeyd sayÄ±:', 'Total records:')} {recursive_count()}")
            case "10": help_menu()
            case "11": clear_all_data()
            case "0":
                save_to_file()
                print(_("Proqram baÄŸlanÄ±r...", "Exiting..."))
                break
            case _: print(_("YanlÄ±ÅŸ seÃ§im.", "Invalid choice."))

if __name__ == "__main__":
    main()
